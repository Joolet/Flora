<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@xml/border"
    android:padding="10sp"
    android:layout_margin="15dp"
    android:elevation="10dp">
    <!-- Popupfönster när man trycker "redigera"-något -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/popuptitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:paddingStart="10dp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:text="Resultat" />
        </LinearLayout>

    <TextView
        android:id="@+id/popuptext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:elevation="5dp"
        android:layout_marginTop="15sp"
        android:text="Hello!" />
    <TextView
        android:id="@+id/popuptext1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:elevation="5dp"
        android:text="Hello!" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/popuptext2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:paddingBottom="10dp"
            android:elevation="5dp"
            android:text="De tre bästa resultaten i denna kategori:" />
        <TextView
            android:id="@+id/topscore1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:elevation="5dp"
            android:text="Hello!" />
        <TextView
            android:id="@+id/topscore2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:elevation="5dp"
            android:text="Hello!" />
        <TextView
            android:id="@+id/topscore3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:elevation="5dp"
            android:text="Hello!" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:elevation="5dp"
        android:orientation="horizontal">



        <Button
            android:text="Avbryt"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:background="@xml/button_layout"
            android:textAllCaps="false"
            android:id="@+id/close_popup"
            android:layout_alignParentStart="true" />
        <Button
            android:text="Skicka"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:background="@xml/button_layout"
            android:drawablePadding="0dp"
            android:textAllCaps="false"
            android:id="@+id/ok_popup"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</LinearLayout>